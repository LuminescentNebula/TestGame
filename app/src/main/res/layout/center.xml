<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/center_top_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ship_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/center_bottom_left"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:layout_marginTop="-3dp"
            android:rotationX="180"
            android:src="@drawable/ship_left"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/center_top_left" />
        <ImageView
            android:id="@+id/center_top_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:src="@drawable/ship_right"
            app:layout_constraintStart_toEndOf="@+id/center_top_left"
            app:layout_constraintTop_toTopOf="parent" />
        <ImageView
            android:id="@+id/center_bottom_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp"
            android:layout_marginTop="-3dp"
            android:rotationX="180"
            android:src="@drawable/ship_right"
            app:layout_constraintStart_toEndOf="@+id/center_bottom_left"
            app:layout_constraintTop_toBottomOf="@+id/center_top_right" />
        <ImageView
            android:id="@+id/center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:rotationX="180"
            android:src="@drawable/ship_center"
            android:layout_marginEnd="5dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>